<?xml version="1.0" encoding="utf-8" ?>
<c:module version='1.0' language='C#'
   xmlns:c='http://maxtoroq.github.io/XCST'
   xmlns:a='http://maxtoroq.github.io/XCST/application'
   extension-element-prefixes='a'>

   <c:type name='Foo'>
      <c:member name='p' as='string'/>
   </c:type>

   <c:template name='c:initial-template'>
      <div>
         <a:model value='new Foo { p = "foo" }' helper-name='htm'>
            <a:input type='password' for='p'/>
            <a:input type='password' name='p'/>
            <a:input type='password' name='p' value='htm.ViewData.Model.p'/>
            <a:input type='password' name='p' attributes='new { value = htm.ViewData.Model.p }'/>
         </a:model>
         <a:model value='"foo"' html-field-prefix='p'>
            <a:input type='password'/>
         </a:model>
      </div>
   </c:template>

   <c:template name='expected'>
      <div>
         <input type='password' id='p' name='p'/>
         <input type='password' id='p' name='p'/>
         <input type='password' id='p' name='p' value='foo'/>
         <input type='password' id='p' name='p' value='foo'/>
         <input type='password' id='p' name='p'/>
      </div>
   </c:template>

</c:module>