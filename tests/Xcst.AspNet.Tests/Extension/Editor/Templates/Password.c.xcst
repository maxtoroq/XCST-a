<?xml version="1.0" encoding="utf-8" ?>
<c:module version='1.0' language='C#'
   xmlns:c='http://maxtoroq.github.io/XCST'
   xmlns:a='http://maxtoroq.github.io/XCST/application'
   extension-element-prefixes='a'>

   <c:import-namespace ns='System.Xml'/>
   
   <c:type name='Foo'>
      <c:member name='Password' data-type='Password'/>
   </c:type>

   <c:template name='c:initial-template'>
      <c:variable name='doc' as='XmlDocument'>
         <c:document>
            <div>
               <a:model value='new Foo { Password = "foo" }' helper-name='htm'>
                  <a:editor for='Password'/>
                  <a:editor for='Password' attributes='new { value = htm.ViewData.Model.Password }'/>
               </a:model>
            </div>
         </c:document>
      </c:variable>
      <c:for-each name='input' in='doc.DocumentElement.SelectNodes("input")' as='XmlElement'>
         <c:void value='input.RemoveAttribute("id")'/>
         <c:void value='input.RemoveAttribute("name")'/>
         <c:void value='input.RemoveAttribute("class")'/>
      </c:for-each>
      <c:copy-of value='doc'/>
   </c:template>

   <c:template name='expected'>
      <div>
         <input type='password'/>
         <input type='password' value='foo'/>
      </div>
   </c:template>

</c:module>