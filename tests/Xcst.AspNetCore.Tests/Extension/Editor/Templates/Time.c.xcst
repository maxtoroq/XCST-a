<?xml version="1.0" encoding="utf-8" ?>
<c:module version='1.0' language='C#'
   xmlns:c='http://maxtoroq.github.io/XCST'
   xmlns:a='http://maxtoroq.github.io/XCST/application'
   extension-element-prefixes='a'>

   <c:import-namespace ns='System'/>

   <c:type name='Foo'>
      <c:member name='d' as='DateTime' value='new DateTime()' data-type='Time'/>
   </c:type>

   <c:template name='c:initial-template'>
      <c:set ref='this.ViewContext.ClientValidationEnabled' value='false'/>
      <a:model value='new Foo()'>
         <a:editor for='d'/>
      </a:model>
   </c:template>

   <c:template name='expected'>
      <input type='time' id='d' name='d' value='00:00:00.000' class='text-box single-line'/>
   </c:template>

</c:module>